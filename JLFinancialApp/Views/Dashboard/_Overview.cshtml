
<div class="container">
    <!-- Totals Bar -->
    <div class="card text-white bg-dark mb-4">
        <div class="card-header">Monthly Overview</div>
        <div class="card-body">
            <div class="progress bg-info" style="height: 3rem">
                <div class="progress-bar bg-warning text-white lead" role="progressbar" style="width: 60%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">Costs: £1750</div>
                <div class="progress-bar bg-success text-dark lead" role="progressbar" style="width: 40%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100">Surplus: £700</div>
            </div>

            <hr />

            <!-- Individual Titles -->
            <div class="row">
                <!-- Income Totals -->
                <div class="col-sm">
                    <div class="card text-white bg-info">
                        <div class="card-header">
                            Income
                            @Html.ActionLink("Add", "Index", "Income", null, new { @class="card-link float-right text-light" })
                        </div>
                        <div class="card-body">
                            <h4 class="card-title">
                                Total:
                                <strong>£2450</strong>
                            </h4>
                        </div>
                    </div>
                </div>

                <!-- Cost Totals -->
                <div class="col-sm">
                    <div class="card text-white bg-warning">
                        <div class="card-header">
                            Costs
                            @Html.ActionLink("Add", "Index", "Subscriptions", null, new { @class = "card-link float-right text-light" })
                        </div>
                        <div class="card-body">
                            <h4 class="card-title">
                                Total:
                                <strong>£1750</strong>
                            </h4>
                        </div>
                    </div>
                </div>

                <!-- Surplus Totals -->
                <div class="col-sm">
                    <div class="card text-white bg-success">
                        <div class="card-header">Surplus</div>
                        <div class="card-body">
                            <h4 class="card-title">
                                Total:
                                <strong>£700</strong>
                            </h4>
                        </div>
                    </div>
                </div>

            </div>
        </div> 
    </div>
</div>