@model JLFinancialApp.Models.ViewModels.SubscriptionFormViewModel

@{
    ViewBag.Title = "Subscription Form";
}

<h2>@Model.Title</h2>

<hr />

<div id="alert" class="alert alert-danger" role="alert" hidden>
    <strong>Error</strong>
    Something went wrong and the subscription could not be added.
</div>

<form id="newSubscription">
    <div class="row justify-content-start">
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label">Name</label>
                <input id="name" name="name" data-rule-validName required type="text" value="@Model.Name" class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label">Type</label>
                <select class="form-control" data-rule-validType required id="type" name="type">
                    <option value="0">Select Period Type</option>
                    @foreach (var periodType in Model.PeriodTypes)
                    {
                        <option value="@periodType.Id">@periodType.Name</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label class="control-label">Amount</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">£</span>
                    </div>
                    <input id="amount" name="amount" data-rule-validAmount required type="text" value="@Model.Amount" class="form-control" />
                </div>
            </div>


            @Html.AntiForgeryToken()
            <br />
            <button class="btn btn-primary btn-lg">Submit</button>
        </div>
    </div>
</form>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval");
    @Scripts.Render("~/bundles/subscriptionForm");
}
